{
  "name": "shoppad-weight-server",
  "version": "1.0.0",
  "description": "Production-ready HTTPS server for receiving weight data from ESP32/ESP8266 devices",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "generate-certs": "node generate-certs.js",
    "test": "node test-server.js",
    "logs": "node view-logs.js",
    "clean-logs": "node clean-logs.js",
    "deploy": "bash deploy.sh",
    "prod:start": "bash production-start.sh",
    "prod:stop": "pm2 stop shoppad-server",
    "prod:restart": "pm2 restart shoppad-server",
    "prod:logs": "pm2 logs shoppad-server",
    "prod:status": "pm2 status"
  },
  "keywords": [
    "esp32",
    "esp8266",
    "https",
    "iot",
    "weight-sensor",
    "hx711"
  ],
  "author": "ShopPad Team",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "selfsigned": "^2.4.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
