# Server Configuration
PORT=5050
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require
DB_MAX_CONNECTIONS=10

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_EXPIRES_HOURS=24
QR_EXPIRES_MINUTES=10

# SSL/TLS Configuration (for local development)
SSL_KEY_PATH=./ssl/key.pem
SSL_CERT_PATH=./ssl/cert.pem

# Logging Configuration
LOG_RETENTION_DAYS=30
LOG_DIRECTORY=./logs

# Security Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,http://localhost:5173

# Data Storage (legacy - for weight data fallback)
DATA_FILE=./data/weight-data.json
MAX_DATA_ENTRIES=10000

